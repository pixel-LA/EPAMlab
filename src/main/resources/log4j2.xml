<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %t %level %c %msg %n" />
        </Console>

        <File name="LogToFile" fileName="logs/app.log">
            <PatternLayout pattern="%d %t %level %c %msg %n" />    
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="LogToFile"/>
        </Root>
    </Loggers>
</Configuration>

